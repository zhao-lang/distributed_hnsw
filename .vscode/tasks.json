{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build",
        "type": "shell",
        "command": "clang++",
        "args": [
          "-std=c++17",
          "-stdlib=libc++",
          "-I./include",
          "main.cpp",
          "-o",
          "build/dhnsw.out",
          "--debug"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "Build tests",
        "type": "shell",
        "command": "clang++",
        "args": [
          "-std=c++17",
          "-stdlib=libc++",
          "-I./include",
          "-I./tests",
          "tests/main.cpp",
          "tests/hnsw_tests.cpp",
          "-o",
          "build/tests.out",
          "--debug"
        ],
        "group": "test"
      },
      {
        "label": "Tests",
        "type": "shell",
        "command": "./build/tests.out",
        "group": "test",
        "dependsOn": ["Build tests"]
      }
    ]
  }